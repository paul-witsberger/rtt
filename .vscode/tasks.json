{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_INSTALL_PREFIX=${workspaceFolder}",
                "-A",
                "x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "install",
                "--config",
                "Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": [
                "configure"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cl",
            "args": [
                "/std:c++20",
                "/Zc:__cplusplus",
                "src\\main.cpp",
                "/Fe:main.exe",
                "/EHsc"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "build_sandbox",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "install",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": [
                "configure"
            ]
        },
        {
            "label": "test_sandbox",
            "type": "shell",
            "command": "cl",
            "args": [
                "/std:c++20",
                "/Zc:__cplusplus",
                "src\\sandbox.cpp",
                "/Fe:sandbox.exe",
                "/EHsc"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": [
                "build_sandbox"
            ]
        }
    ]
}